@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Yeni Ürün Girişi</h1>



<form method="post">

    @Html.Label("Ürün Adı : ")
    @Html.TextBoxFor(x => x.ProductName , new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.ProductName)
    <br />
      @Html.Label("Ürün Fiyatı : ")
    @Html.TextBoxFor(x => x.ProductPrice , new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.ProductPrice)
    <br />
    @Html.Label("Ürün Stok Adedi : ")
    @Html.TextBoxFor(x => x.Stocks , new { @class="form-control"})
    @Html.ValidationMessageFor(x => x.Stocks)
    <br />

    <button class="btn btn-outline primary">Yeni Ürün Girişi</button>
</form>

