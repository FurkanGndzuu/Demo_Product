@using EntityLayer.Concrete;
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyatı</th>
        <th>Stok Adedi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td>@item.Stocks</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger"> Sil </a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success"> Güncelle </a></td>
        </tr>
    }
</table>
<br />
<br />

<a href="/Product/AddProduct/" class="btn btn-outline-primary">Yeni Ürün Girişi</a>
